<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.JogoCromossomo2Fragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView89"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Identifique qual a estrutura correta dos cromossomos"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewCerto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/certo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewErrado3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageViewErrado2"
            app:layout_constraintTop_toBottomOf="@+id/textView89" />

        <ImageView
            android:id="@+id/imageViewErrado1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/errado1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageViewErrado3"
            app:layout_constraintTop_toBottomOf="@+id/textView89" />

        <ImageView
            android:id="@+id/imageViewErrado2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/errado2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewCerto"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView89" />

        <ImageView
            android:id="@+id/imageViewErrado3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/errado3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewErrado1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageViewCerto"
            app:layout_constraintTop_toBottomOf="@+id/textView89" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>